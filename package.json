{
  "name": "epoch",
  "productName": "Epoch",
  "version": "1.2.0",
  "description": "Multi-timezone world clock and calendar menu bar app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "dist": "electron-builder"
  },
  "keywords": ["clock", "calendar", "timezone", "menubar"],
  "author": "Nandark",
  "license": "MIT",
  "type": "commonjs",
  "build": {
    "appId": "com.nandark.epoch",
    "productName": "Epoch",
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"],
      "icon": "icon.icns"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "icon.icns"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  }
}
